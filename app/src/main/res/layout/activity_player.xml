<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fit"
        app:show_buffering="when_playing"
        app:use_controller="true"
        app:controller_layout_id="@layout/custom_player_control_view"
        app:show_fastforward_button="true"
        app:show_rewind_button="true" />

    <TextView
        android:id="@+id/watermark_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/watermark_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:alpha="0.7"
        android:layout_gravity="top|start"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/speed_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0x >>"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/watermark_bg"
        android:padding="8dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:drawablePadding="4dp"
        android:drawableTop="@android:drawable/ic_media_ff"
        app:drawableTint="#FFFFFF" />

</FrameLayout>
