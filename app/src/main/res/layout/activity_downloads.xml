<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/web_bg_start">

    <TextView
        android:id="@+id/downloads_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الفيديوهات المحملة"
        android:textSize="24sp"
        android:textColor="@color/web_text_main"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/clear_logs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مسح السجلات"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/downloads_title"/>

    <TextView
        android:id="@+id/logs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سجل الأخطاء (للصيانة):"
        android:textSize="18sp"
        android:textColor="@color/web_text_main"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:id="@+id/logs_scrollview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#20000000"
        android:padding="5dp">
        <TextView
            android:id="@+id/logs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="...جاري تحميل السجلات"
            android:textColor="@color/web_text_subtle"
            android:textSize="12sp"
            android:textIsSelectable="true"/>
    </ScrollView>

    <ListView
        android:id="@+id/downloads_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/downloads_title"
        android:layout_above="@id/logs_title"
        android:divider="@color/web_text_subtle"
        android:dividerHeight="1dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لا توجد فيديوهات محملة حالياً."
        android:textColor="@color/web_text_subtle"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/decryption_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
