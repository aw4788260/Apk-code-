<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/web_bg_start">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/web_bg_end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المكتبة"
            android:textSize="28sp"
            android:textColor="@color/web_text_main"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الفيديوهات المحملة والمحفوظة"
            android:textSize="14sp"
            android:textColor="@color/web_text_subtle"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/downloads_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        android:scrollbarStyle="outsideOverlay"/>

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:alpha="0.3"
            android:tint="@color/web_text_subtle"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا توجد فيديوهات بعد"
            android:textColor="@color/web_text_subtle"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جاري التحضير..."
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>
    </FrameLayout>

</RelativeLayout>
